<!-- app/views/checkout/show.html.erb -->

<div class="row">
  <div class="col-12">
    <h1>Checkout</h1>
    
    <!-- Checkout Steps Progress Bar -->
    <div class="progress mb-4" style="height: 30px;">
      <div class="progress-bar bg-primary" role="progressbar" style="width: 33.33%">
        Step 1: Review Cart
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5>Order Items</h5>
      </div>
      <div class="card-body">
        <% @cart_items.each do |item| %>
          <div class="d-flex align-items-center border-bottom py-3">
            <div class="me-3">
              <% if item[:product].images.attached? %>
                <%= image_tag item[:product].images.first, 
                    style: "width: 60px; height: 60px; object-fit: cover;", 
                    class: "rounded" %>
              <% else %>
                <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                     style="width: 60px; height: 60px;">
                  <small class="text-muted">No Image</small>
                </div>
              <% end %>
            </div>
            <div class="flex-grow-1">
              <h6 class="mb-1"><%= item[:product].name %></h6>
              <small class="text-muted"><%= item[:product].category %></small>
              <div class="mt-1">
                <span class="fw-bold"><%= number_to_currency(item[:product].price) %></span>
                × <%= item[:quantity] %>
              </div>
            </div>
            <div class="text-end">
              <strong><%= number_to_currency(item[:total]) %></strong>
            </div>
          </div>
        <% end %>
        
        <div class="mt-3">
          <%= link_to "← Back to Cart", cart_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5>Order Summary</h5>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
          <span>Subtotal:</span>
          <span><%= number_to_currency(@subtotal) %></span>
        </div>
        
        <div class="d-flex justify-content-between mb-2">
          <span>Tax:</span>
          <span>
            <% if current_user.province %>
              <%= number_to_currency(@tax_amount) %>
              <small class="text-muted d-block">
                <%= current_user.province.name %> 
                (<%= current_user.province.total_tax_rate %>%)
              </small>
            <% else %>
              <small class="text-muted">Province required</small>
            <% end %>
          </span>
        </div>
        
        <div class="d-flex justify-content-between mb-2">
          <span>Shipping:</span>
          <span>FREE</span>
        </div>
        
        <hr>
        
        <div class="d-flex justify-content-between mb-3">
          <strong>Total:</strong>
          <strong><%= number_to_currency(@total) %></strong>
        </div>
        
        <div class="d-grid">
          <% if current_user.address_complete? %>
            <%= link_to "Continue to Review", review_checkout_index_path, 
                class: "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Enter Shipping Address", address_checkout_index_path, 
                class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
        
        <!-- User Address Summary -->
        <div class="mt-3 p-3 bg-light rounded">
          <h6>Shipping Address</h6>
          <% if current_user.address_complete? %>
            <p class="mb-0 small">
              <strong><%= current_user.full_name %></strong><br>
              <%= current_user.full_address %>
            </p>
            <%= link_to "Change Address", address_checkout_index_path, 
                class: "btn btn-sm btn-outline-primary mt-2" %>
          <% else %>
            <p class="text-muted mb-0">No address provided</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>