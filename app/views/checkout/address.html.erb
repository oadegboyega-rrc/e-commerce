<!-- app/views/checkout/address.html.erb -->

<div class="row">
  <div class="col-12">
    <h1>Checkout</h1>
    
    <!-- Checkout Steps Progress Bar -->
    <div class="progress mb-4" style="height: 30px;">
      <div class="progress-bar bg-primary" role="progressbar" style="width: 66.66%">
        Step 2: Shipping Address
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5>Shipping Address</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @user, url: process_address_checkout_index_path, 
            method: :post, local: true do |f| %>
          
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <strong>Please correct the following errors:</strong>
              <ul class="mb-0 mt-2">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", required: true %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", required: true %>
            </div>
          </div>
          
          <div class="mb-3">
            <%= f.label :phone, "Phone Number", class: "form-label" %>
            <%= f.telephone_field :phone, class: "form-control", 
                placeholder: "+1 (555) 123-4567", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :address_line_1, "Address Line 1", class: "form-label" %>
            <%= f.text_field :address_line_1, class: "form-control", 
                placeholder: "Street address, P.O. box, company name, c/o", required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :address_line_2, "Address Line 2 (Optional)", class: "form-label" %>
            <%= f.text_field :address_line_2, class: "form-control", 
                placeholder: "Apartment, suite, unit, building, floor, etc." %>
          </div>
          
          <div class="row">
            <div class="col-md-4 mb-3">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control", required: true %>
            </div>
            <div class="col-md-4 mb-3">
              <%= f.label :province_id, "Province", class: "form-label" %>
              <%= f.select :province_id, 
                  options_from_collection_for_select(@provinces, :id, :name, @user.province_id),
                  { prompt: "Select Province" },
                  { class: "form-select", required: true } %>
            </div>
            <div class="col-md-4 mb-3">
              <%= f.label :postal_code, class: "form-label" %>
              <%= f.text_field :postal_code, class: "form-control", 
                  placeholder: "A1B 2C3", pattern: "[A-Za-z][0-9][A-Za-z] ?[0-9][A-Za-z][0-9]", 
                  required: true %>
              <div class="form-text">Canadian postal code format: A1B 2C3</div>
            </div>
          </div>
          
          <div class="d-flex justify-content-between">
            <%= link_to "â† Back to Cart Review", show_checkout_index_path, 
                class: "btn btn-outline-secondary" %>
            <%= f.submit "Continue to Review", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>