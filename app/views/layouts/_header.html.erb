<header class="site-header">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "YourStore", root_path, class: "navbar-brand fw-bold" %>
      
      <!-- Mobile menu toggle button -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <!-- Navigation items -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Left side navigation -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Products", products_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_path, class: "nav-link" %>
          </li>
        </ul>

        <!-- Search form (if you have search functionality) -->
        <div class="d-flex me-3">
          <%= form_with url: search_products_path, method: :get, local: true, class: "d-flex" do |form| %>
            <%= form.text_field :search, placeholder: "Search products...", class: "form-control me-2", value: params[:search] %>
            <%= form.submit "Search", class: "btn btn-outline-light" %>
          <% end %>
        </div>

        <!-- Right side navigation -->
        <ul class="navbar-nav">
          <!-- Shopping Cart -->
          <li class="nav-item">
            <%= link_to cart_path, class: "nav-link position-relative" do %>
              ðŸ›’ Cart
              <% if session[:cart] && session[:cart].any? %>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  <%= session[:cart].values.sum %>
                </span>
              <% end %>
            <% end %>
          </li>

          <!-- User Authentication -->
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                ðŸ‘¤ <%= current_user.email.split('@').first.capitalize %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", profile_path, class: "dropdown-item" %></li>
                <li><%= link_to "Order History", orders_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn btn-outline-light ms-2 px-3" %>
            </li>
          <% end %>

            <div class="navbar-nav ms-auto">
            <% if user_signed_in? %>
            <span class="nav-link">Hello, <%= current_user.email %></span>
            <%= link_to "Sign Out", destroy_user_session_path, 
              data: { "method": "delete" }, 
              class: "nav-link" %>
            <% else %>
                <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>