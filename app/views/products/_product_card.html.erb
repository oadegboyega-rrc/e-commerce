<div class="card product-card h-100">
    <% if product.images.attached? %>
        <%= image_tag product.images.first, class: "card-img-top product-image" %>
    <% else %>
        <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
            <span class="text-muted">No Image</span>
        </div>
    <% end %>

    <div class="card-body d-flex flex-column">
        <div class="mb-2">
            <% if product.on_sale %>
                <span class="badge on-sale me-1">On Sale</span>
            <% end %>
            <% if product.new_arrival %>
                <span class="badge new-arrival">New</span>
            <% end %>
        </div>

        <h5 class="card-title">
            <%= link_to product.name, product_path(product), class: "text-decoration-none" %>
        </h5>

        <p class="card-text flex-grow-1">
            <%= truncate(product.description, length: 100) %>
        </p>

        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <span class="price"><%= number_to_currency(product.price) %></span>
                <small class="text-muted"><%= product.category %></small>
            </div>

            <div class="d-grid gap-2 mt-2">
                <%= link_to "View Details", product_path(product), class: "btn-outline-primary" %>
                <%= form_with url: add_item_cart_path, method: :post, local: true,
                        class: "d-grid mt-1" do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.submit "Add to Cart", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
        